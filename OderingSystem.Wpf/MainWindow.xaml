<Window x:Class="OderingSystem.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OderingSystem.Wpf"
        mc:Ignorable="d"
        Background="LightGray"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid x:Name="MainWindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="190"/>
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1">

            <Button x:Name="ItemTransferButton"
                    Content="Transfer Items"/>
            <Button x:Name="OpenNewTable"
                    Content="New Table"/>
            <Button x:Name="SwitchTableView"
                    Content="Switch View" Click="SwitchViewClick"/>
        </StackPanel>
        
        <TextBlock
            Text="Ordering-System"
            FontSize="35"
            FontWeight="Bold"/>

        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Text="Navigation"
            FontSize="35"
            FontWeight="Bold"/>

        <Frame 
            x:Name="Main" 
            NavigationUIVisibility="Hidden"
            Grid.Row="1"/>
    </Grid>
</Window>
